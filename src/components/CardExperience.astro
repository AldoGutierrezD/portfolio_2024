---
const { icon, title, subtitle, date, active } = Astro.props;
---

<article
    class={`w-full md:w-80 border-[1px] text-black flex flex-col rounded-2xl h-full ${active ? "border-gold" : "border-black"}`}
>
    <div class="p-4">
        <span class="text-4xl">{icon}</span>
        <h4 class="font-manrope font-semibold text-base xl:text-lg mt-6 mb-2">
            {title}
        </h4>
        <h6
            class="text-manrope font-light leading-6 text-xs md:text-sm xl:text-base"
        >
            {subtitle}
        </h6>
    </div>
    <div
        class={`p-4 border-t-[1px] ${active ? "border-gold" : "border-black"}`}
    >
        <h6
            class="text-manrope font-light leading-6 text-xs md:text-sm xl:text-base"
        >
            <span
                class="font-manrope text-xs md:text-sm xl:text-base font-light"
                >{date}</span
            >
        </h6>
    </div>
</article>
